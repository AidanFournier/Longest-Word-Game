<% @letters.each do |letter| %>
  <div class="letter-tile"> <%= letter %> </div>
<% end %>

<form action="/score" method="post" class="form-inline d-flex">
  <!-- <input name="start_time" type="hidden" value="<%#= Process.clock_gettime(Process::CLOCK_MONOTONIC) %>"/> -->
  <input type="text" name="word" class="form-control" placeholder="Your longest word">
  <input type="submit" value="Submit word" class="btn">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <input type="hidden" name="letters" value="<%= @letters.join %>"/>
